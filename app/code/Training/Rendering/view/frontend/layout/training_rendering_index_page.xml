<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="rendering-detail-block" template="Training_Rendering::parent.phtml">
                <block name="rendering-detail-block-child" as="child-block" template="Training_Rendering::details.phtml"/>
                <block class="Training\Rendering\Block\Custom" name="rendering-detail-block-child-custom" as="child-block-custom" template="Training_Rendering::custom_block.phtml"/>
            </block>
            <block class="Magento\Framework\View\Element\Template" name="rendering-detail-block-2" template="Training_Rendering::details.phtml"/>
            <block name="rendering-block-view-model" template="Training_Rendering::with-view-model.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Training\Rendering\ViewModel\Custom</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
